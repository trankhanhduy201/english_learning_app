FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

RUN apt-get update && apt-get install -y \
    nginx \
    supervisor \
    gcc \
    libpq-dev \
    curl \
    && rm -rf /var/lib/apt/lists/*

RUN mkdir -p /code /var/log/supervisor
RUN mkdir -p /run/gunicorn

WORKDIR /code

COPY ./backend/english_learning_app /code/
RUN pip install --upgrade pip && pip install -r requirements.txt

COPY supervisord/default.conf /etc/supervisor/conf.d/supervisord.conf
RUN mkdir -p /var/log/supervisord
RUN chmod -R 755 /var/log/supervisord

EXPOSE 8000

COPY ./entrypoint.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh

ENTRYPOINT ["entrypoint.sh"]
CMD ["/usr/bin/supervisord"]